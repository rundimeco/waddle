	function getParameter(param)
	{
		var query = window.location.search;
		var iLen = param.length;
		var iStart = query.indexOf(param);
		if (iStart == -1)
		{
			return "";
		}
		iStart += iLen + 1;
		var iEnd = query.indexOf("&", iStart);
		if (iEnd == -1)
		{
			return query.substring(iStart);
		}
	
		return query.substring(iStart, iEnd);
	}
	
	function getNav()
	{
		var key = getParameter("coluid") + "-" + getParameter("kindid");

		if(key == "91-2751")
		{
			return '您的位置：<a href="/">首頁</a> -&gt;&gt; <a href="/crn-webapp/spec/photoChannel.jsp">圖片頻道</a> -&gt;&gt; <a href="/crn-webapp/kindOutline.jsp?coluid=91&kindid=2751">新聞網首頁圖片2</a>';
		}

		if(key == "7-0")
		{
			return '您的位置：<a href="/">首頁</a> -&gt;&gt; <a href="/crn-webapp/msgOutline.jsp?coluid=7">中評電訊</a>';
		}

		if(key == "48-0")
		{
			return '您的位置：<a href="/">首頁</a> -&gt;&gt; <a href="/crn-webapp/msgOutline.jsp?coluid=48">社會百態</a>';
		}

		if(key == "0-0")
		{
			return '您的位置：<a href="/">首頁</a> -&gt;&gt; <a href="/crn-webapp/nowOutline.jsp?coluid=0">即時新聞</a>';
