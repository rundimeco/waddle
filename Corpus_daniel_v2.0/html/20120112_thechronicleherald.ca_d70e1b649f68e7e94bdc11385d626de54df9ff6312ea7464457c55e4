<script type="text/javascript">
OAS_AD('x01');
</script>
<style type="text/css">
.takeover-sidebar{
  position: absolute;
  top: 0px;
  margin: 30px 0 0 0;
  padding: 0;
  height:100%
}

#take-over-left{
  float: left;
  left: 0;
}

#take-over-right{
  float: right;
  right: 0;
}

</style>
<script type="text/javascript">

function getTakeoverSize() {
  var obj = {height: 0, width:0};

  obj.height = $(document).height() - 48;
  if ($.browser.msie && $.browser.version.substr(0,1)<7){
    obj.width = ($(window).width() - 1010) / 2;
  } else {
    obj.width = ($('html').width() - 1010) / 2;
  }

  return obj;
}

$().ready(function(){
  if($('#take-over-left').length){
    var size = getTakeoverSize();
    $('#take-over-left').height(size.height);
    $('#take-over-right').height(size.height);
    $('#take-over-left').width(size.width);
    $('#take-over-right').width(size.width);

    $('#take-over-left, #take-over-right').css({
        'cursor' : 'pointer',
        'background-color':'transparent'
    });
    $('#take-over-left, #take-over-right').click(function(){
      var href = $(this).find('a:first').attr('href');
      var newWindow = window.open(href, '_blank');
      newWindow.focus();
      return false;
    });
    $(window).scroll(function(){
      size = getTakeoverSize();
      if($('#take-over-left').height() != size.height){
        $('#take-over-left').height(size.height)
      }
      if($('#take-over-right').height() != size.height){
        $('#take-over-right').height(size.height)
      }
    });

    $(window).resize(function(){
      size = getTakeoverSize();
      $('#take-over-left').width(size.width);
      $('#take-over-right').width(size.width);
    });
  }
});

</script>

