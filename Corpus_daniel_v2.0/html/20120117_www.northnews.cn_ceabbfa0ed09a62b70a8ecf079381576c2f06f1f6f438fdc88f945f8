<script type="text/javascript">
document.body.oncopy = function () { setTimeout( function () { var text = clipboardData.getData("text"); if (text) { text = text + "\r\n本文来源:正北方网——内蒙古人的新闻主页 关注你最关心的新闻 原文地址："+location.href; clipboardData.setData("text", text); } }, 100 ) }
</script>
</body>
