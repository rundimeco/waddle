    if (true) {
        var _sf_async_config = {};
        /** CONFIGURATION START **/
        _sf_async_config.uid = 30676;
        _sf_async_config.domain = document.domain;
        _sf_async_config.sections = 'Books';
        _sf_async_config.authors = 'Alison Flood';
