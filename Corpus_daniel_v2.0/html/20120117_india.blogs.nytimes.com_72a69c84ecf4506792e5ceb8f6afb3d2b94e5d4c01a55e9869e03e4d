var crnr_version = 'V3';
var blogPostCommentCountObject = jQuery.parseJSON('{"http:\/\/india.blogs.nytimes.com\/2012\/01\/17\/the-great-yoga-divide\/":{"commentCount":"","addCssClass":"hidden"},"http:\/\/india.blogs.nytimes.com\/2012\/01\/17\/hasina-kharbhih-raising-the-stakes-against-child-trafficking\/":{"commentCount":"","addCssClass":"hidden"},"http:\/\/india.blogs.nytimes.com\/2012\/01\/16\/a-climate-change-idea-that-might-work\/":{"commentCount":1,"addCssClass":""},"http:\/\/india.blogs.nytimes.com\/2012\/01\/16\/image-of-the-day-january-16\/":{"commentCount":"","addCssClass":"hidden"},"http:\/\/india.blogs.nytimes.com\/2012\/01\/16\/a-conversation-with-shoma-chaudhury\/":{"commentCount":9,"addCssClass":""}}');
jQuery.each(blogPostCommentCountObject, function(blogPostURL, commentCountText) {
	var commentPageLink = blogPostURL;
	var commentCount = parseInt(commentCountText.commentCount, 10) || 0;

	if (commentCount === 0) { //no comments
		commentCountText.commentCount = 'Add a comment';
		jQuery("a.post-comment[href='" + commentPageLink + "']").not(".no-comment-prompt").html(commentCountText.commentCount).removeClass("hidden").attr("href", commentPageLink + "#postComment"); //prompt to post
		jQuery("a.post-comment[href='" + commentPageLink + "'].no-comment-prompt").parent(".comment-link").remove(); //remove parent .comment-link if it exists
	}
	else { //some comments
		if (commentCount === 1) { //one comment
			commentCountText.commentCount = '1 Comment';
		}
		else { //more than one comment
			commentCountText.commentCount = commentCountText.commentCount + ' Comments';
		}
		jQuery("a.post-comment.comment-number-only[href='" + commentPageLink + "']").html(commentCount).removeClass("hidden").attr("href", commentPageLink + "#postComment"); //number only
		jQuery("a.post-comment[href='" + commentPageLink + "']").not(".comment-number-only").html(commentCountText.commentCount).removeClass("hidden").attr("href", commentPageLink + "#postComment"); //verbose
	}
});
