  </div>

<script>
  $(function() {

    if ($("#adv_fixed")) {
      var adv_h = $("#adv_container").height()+$("#adv_container").position().top;
      $(window).scroll(function () {
        if ($(window).scrollTop()>adv_h) {
          if (!$("#adv_fixed").hasClass("fixed-block")) $("#adv_fixed").addClass("fixed-block");
        } else {
          if ( $("#adv_fixed").hasClass("fixed-block")) $("#adv_fixed").removeClass("fixed-block");
        }
      });
    }
  });
</script>

