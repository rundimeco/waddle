function setCookie(adjstr) 
{　
   nameValue=escape(adjstr + "$A#");
　 document.cookie="ID=" + nameValue + ";";
}

function adjustFont(str)
{
	if (str == "big")
	{
		$('#newsti').attr('className',"news_title_big");
		$('#newsc').attr('className',"news_content_big");
		setCookie(str);
	}
	else if (str == "small")
	{
		$('#newsti').attr('className',"news_title");
		$('#newsc').attr('className',"news_content");
		setCookie(str);
	}
}

window.onload = function ()
{
	cookieStr=unescape(document.cookie);
	beginPos=cookieStr.indexOf("ID");
	endPos=cookieStr.indexOf("$A#");

	if (beginPos != -1)
	{
		IDname=cookieStr.substring( (beginPos +3) , endPos);
		adjustFont(IDname);
	}
}
