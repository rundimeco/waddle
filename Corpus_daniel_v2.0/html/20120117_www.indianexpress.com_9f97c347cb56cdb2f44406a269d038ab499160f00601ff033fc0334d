  function search_SendDataSearch()
{
	
	var q=document.searchTop.q.value;
	//alert(document.searchTop.stype.value);
	if (document.searchTop.stype.value!="City")
	{
			if (q=="")
			{
				alert('Please Enter Search Value')
				document.searchTop.q.focus();
				window.status='Please Enter Search Value';
				return false;
			}
	}
	if (document.searchTop.stype.value=="indianexpress")
	{
		//document.searchTop.action="/search.php?q="+ q;
		//document.searchTop.submit();
		var searchText = q;
		searchText = searchText.replace(/(<pre[\s\S]*?>[\s\S]*?<\/pre>)| {2,}/ig, ' ');
		var splitText = searchText.split(' ');
		if(splitText.length > 5)
		{
			alert("your search exceed max number of words limit");
			return false
		}
		
		var url = "/gsearch.php?cof=FORID%3A10&ie=ISO-8859-1&cx=partner-pub-9517772455344405%3Aw4l2qg-ta2o&q="+q+"&sort=date&hq=more%3Arecent4&sa=Search#1052"			
		window.location.href=url;
  }
	if (document.searchTop.stype.value=="express")
	{	
		window.location.href="http://www.expressindia.com/gsearch.php?cof=FORID%3A10&ie=ISO-8859-1&cx=partner-pub-9517772455344405%3A7g933d4wd7i&q="+q+"&as_qdr=y5&sa=Search#1148";
//	document.searchTop.action="/search.php?q="+ q;
		//document.searchTop.submit();
	}
	else if (document.searchTop.stype.value=="web")
	{
	document.searchTop.action="http://www.indianexpress.com/gsearch.php?cx=partner-pub-9517772455344405%3Aoudczv-4zkx&cof=FORID%3A10&ie=ISO-8859-1&q="+ q + "&as_qdr=y5&sa=Search#";
	document.searchTop.method="Post";
	document.searchTop.submit();
	}

 else if (document.searchTop.stype.value=="screenindia")
	{
		var url = "http://www.screenindia.com/gsearch.php?cx=partner-pub-9517772455344405:6b8xsz-mz73&cof=FORID%3A10&ie=ISO-8859-1&q="+q+"&as_qdr=y5&sa=Search&type=screen"
		window.location.href = url;
	}
	
	else if (document.searchTop.stype.value=="shopping")
	{		
	
			window.location.href="http://shopping.expressindia.com/index.php?page=tsearch&lexemes="+ q;
	}

	else if (document.searchTop.stype.value=="City")
	{
		//var name=document.searchTop.cityTop.value;	
		document.searchTop.action="/citySearch.php";
		document.searchTop.submit();
	

	}
	
return false;
}

  
