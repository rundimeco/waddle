<script>
  function showdiv(val)
  {
    if (val == 1)
    {
      document.getElementById('subcontent').style.display="block";
    }
    if (val == 2)
    {
      document.getElementById('subcontent').style.display="none";
      //return false;
    }
    if (val == 3)
    {
      document.getElementById('noikaMouseOver').style.display="block";
    }	

	if (val == 4)
    {
      document.getElementById('favorite').style.display="block";
    }	

	if (val == 5)
    {
      document.getElementById('favorite').style.display="none";
    }

  }

  function hide(ele) {
    var srcElement = document.getElementById(ele);     
    srcElement.style.display= 'none';
    //return false;
  }

</script>
