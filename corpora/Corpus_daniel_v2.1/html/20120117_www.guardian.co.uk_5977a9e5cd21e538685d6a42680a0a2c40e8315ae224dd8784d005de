<script type="text/javascript">
jQ(document).ready(function(){
	// check jQuery UI hasn't been loaded in by a microapp. short-term fix.
	if (!jQuery.ui) {
	  	jQ.getScript('http://resource.guim.co.uk/discussion/static/1777/jquery-ui-1.7.3.custom.min.js');
