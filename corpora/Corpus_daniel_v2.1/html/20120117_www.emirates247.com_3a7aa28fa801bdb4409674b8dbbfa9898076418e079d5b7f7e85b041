	function showHideTnC() {
		if($("#tnc").is(":hidden")) {
			$("#tnc").slideDown("slow");
		}
		else {
			$("#tnc").slideUp("slow");
		}
	}
	
	function showCommentForm() {
		$("#commentSuccessBox").hide();
		$("#comments-form-F48562").slideDown("slow");
	}

		var validation = {
		rules: {
			comment_text: {
				required: true,
				maxlength: 500
			},
			comment_subject: {
				required: true
			},
			comment_author: {
				required: true
			},
												comment_author_mail: {
				email: true
			}
		},
		messages: {
			comment_text: {
				required: "The comment text has to be specified.",
				maxlength: "???blog.error.commentTextMaxlength???"
			},
			comment_subject: {
				required: "???blog.error.commentSubjectEmpty???"
			},
									comment_author: {
				required: "The comment author has to be specified."
			},
						comment_author_mail: {
				email: "Please provide a valid e-mail address"
			}
		},
		errorElement: "span",
		submitHandler: function(form) {
			var submitButton = $("#submitCommentBlogPost-90026803");
			submitButton.css("color", "#7A7A7A");
			submitButton.attr("disabled", true);
			
			$(form).ajaxSubmit({
				cache: false,
				data: { ot: "ot.AjaxPageLayout" },
	            success: function(response) {
	            	submitButton.css("color", "#000");
	    	        submitButton.attr("disabled", false);
	    	        $(response).filter('#comments-form-container').each(function() {
	    	        	$('#comments-form-container').html($(this).html());
	    	         });
	    	         var validator = jQuery("#comments-form-F48562").validate(validation);

	    	         // Only if the comment Success Box exists then we hide the form 
	    	         if($("#commentSuccessBox").length) {
	    	         	$("#comments-form-F48562").hide();
	    	         }
	            },
	            failure: function() {
	    			submitButton.css("color", "#000");
	    	        submitButton.attr("disabled", false);
	            },
	            clearForm: true
			});
		}
	};

		$(document).ready(function() {
		/* Error management */
		var validator = $("#comments-form-F48562").validate(validation);
	});

