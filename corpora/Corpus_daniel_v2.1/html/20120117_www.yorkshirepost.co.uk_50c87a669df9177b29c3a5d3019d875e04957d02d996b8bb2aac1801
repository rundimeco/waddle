        function onBlur(field) {
            if (field.value == '') field.value = field.defaultValue;
        }
        function onFocus(field) {
            if (field.defaultValue == field.value) field.value = '';
        }
		function postComment(field) {
		var body = $('#body');
		var val = body.val();
		var def = body.attr ('defaultValue');
		if (val==def || val=='') {
			alert ("Please enter a comment");
			return false;
		}
		var btn = document.getElementById("postCommentBtn");
		btn.disabled=true;
		btn.textContent='Sending...';
		
		var myJSONObject = {"body": val, "action": "postcomment", "submitted": "true", "ajax": "true", "contentid": "ContentId(1.4146647)"};
		var postMessage = "<br /><b>Your comment has been posted.</b>";
		
		jQuery.post("http://www.yorkshirepost.co.uk/news/at-a-glance/main-section/stronger_inspection_role_for_health_watchdog_supported_by_poll_of_nurses_1_4146647", myJSONObject, function(result){

