}



function moveSliderVol(event)

{

if (canMoveVol == 1)

{

var movePosition = (event.clientX - findPos(document.getElementById("volslider"))[0]);

if (movePosition <= 5)

{

movePosition = 0;

}

if (movePosition >= 23)

{

movePosition = 23;

}

if (document.getElementById("VIDEO") != null && document.getElementById("VIDEO").controls != null)

{

document.getElementById("VIDEO").settings.volume = movePosition * 4;

}

document.getElementById("volslider").style.paddingLeft = movePosition + "px";

setCookie("EmbedBroadVol",movePosition,one_year,"/");

currentVolume = movePosition ;



}

}



function findPos(obj) {

	var curleft = curtop = 0;

	if (obj.offsetParent) {

		curleft = obj.offsetLeft

		curtop = obj.offsetTop

		while (obj = obj.offsetParent) {

			curleft += obj.offsetLeft

			curtop += obj.offsetTop

		}

	}

	return [curleft,curtop];

}

function showInfo(ID)

{

   var videoElement =  document.getElementById("blurbVideo" + ID + cT);

   if (videoElement.style.display == "none")

   {

   videoElement.style.display = "block";

   document.getElementById("infoRowImage" + ID + cT).setAttribute("src", "http://www.ctv.ca/mar/images/local990/broadbandminus.png");

   }

   else

   {

   videoElement.style.display = "none";

document.getElementById("infoRowImage" + ID + cT).setAttribute("src", "http://www.ctv.ca/mar/images/local990/broadbandplus.png");

   }

}



function clearVideoSelection(currentPosition, type)

{

for (i = 1; i < maxPos; i++)

{

var element = document.getElementById("videoSelection" + i + type);

if (element != null && i != currentPosition)

{

element.style.backgroundColor = "#dcdcdc";

}

else if(element != null)

{

element.style.backgroundColor = "#f2f2f2";

}

}

}



function switchHubVideo(URLString, URLStringLow, clip_start, clip_end, clip_id, currentPosition, titleT)

{

titleOfVideo = URLString;

//changeVideo(URLString, URLStringLow, clip_start, clip_end, clip_id, currentPosition);

var newVideo = new Video( { ClipId:clip_id, Format:'FLV', Permalink:'http://watch.ctv.ca/news/Redirect/?ClipId=' + clip_id, Title:titleT});
Playlist.GetInstance().Play(newVideo);
var element = document.getElementById("videoSelection1T");

element.style.backgroundColor = "#dcdcdc";

location.hash="#TopVideoAn";

}



function returnTimeVideo(timeString)

{

return parseInt(timeString.substring(0, 2)*3600) + parseInt(timeString.substring(3, 5)*60) + parseInt(timeString.substring(6,8))



}



function changeVideo(URLString, URLStringLow, clip_start, clip_end, clip_id, currentPosition)

{



/*if (cT == "T")

{

clearVideoSelection(-1, "M");

clearVideoSelection(currentPosition, "T");

}

else

{

clearVideoSelection(currentPosition, "M");

clearVideoSelection(-1, "T");

}*/


//totalTime = parseInt(clip_end.substring(0, 2))*3600 + parseInt(clip_end.substring(3,5))* 60 + parseInt(clip_end.substring(6,8))

//clip_end = "-1";


currentPos = currentPosition;

//switchVideo("http://www.ctv.ca/servlet/HTMLTemplate/nocompress?content_type=video/x-ms-asf&brand=generic&tf=/ctv/generic/video/videoplayer.asx&cf=/ctv/generic/video/player.cfg&url=" + URLString + "&start=" + clip_start + "&end=" + clip_end + "&spd=hi&hub=EdmontonHome");
Playlist.GetInstance().Play(VideoPlaying[currentPosition])








}





function controlVideo(action)

{

previousTime = 0;

if (action == 1)

{

document.getElementById("VIDEO").controls.stop();

}

else if (action == 2)

{

document.getElementById("VIDEO").controls.play();

}

else if (action == 3)

{

if (x == -1)

{

startVideo();

}

else

{

if (stateI == "pause")

{

document.getElementById("pausePlay").setAttribute('src', 'http://www.ctv.ca/mar/images/local990/broadbandpause.jpg');

document.getElementById("VIDEO").controls.play();

stateI = "play";

}

else

{

stateI = "pause";

document.getElementById("pausePlay").setAttribute('src', 'http://www.ctv.ca/mar/images/local990/broadbandplay.gif');

document.getElementById("VIDEO").controls.pause();

}

}

}

else if (action == 4)

{

currentPos++;

if (currentPos == maxPos )

{

currentPos = 1;

}

functionName = document.getElementById("videoSelection" + currentPos + cT).getElementsByTagName('a')[0].getAttribute('href');

parseCurrentVideo(functionName);





//alert(functionName);

}

else if (action == 5)

{

currentPos--;

if (currentPos == 0)

{

currentPos = maxPos - 1;

}

functionName = document.getElementById("videoSelection" + currentPos + cT).getElementsByTagName('a')[0].getAttribute('href');

parseCurrentVideo(functionName);





//document.getElementById("VIDEO").controls.stop();

}

else if (action == 6)

{

alert(document.getElementById("VIDEO").fullScreen);

document.getElementById("VIDEO").fullScreen = true;

}

else if (action == 7)

{

alert(event);

}

}



function parseCurrentVideo(functionName)

{

functionName = functionName.replace("javascript:", "");

functionName = functionName.replace("changeVideo(", "");

functionName = functionName.replace(/'/g,"");



changeVideo(functionName.split(",")[0],functionName.split(",")[1],functionName.split(",")[2],functionName.split(",")[3],functionName.split(",")[4],functionName.split(",")[5].replace(")",""));





}



