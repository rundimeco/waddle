						<script language="javascript">
							function doSearch() {
								var q = document.getElementById("q").value;
								if (q.length == 0) {
									alert("Please enter your search criteria");
									return;
								}

								var type = document.getElementById("searchtype").value;
								switch (type) {
									case "newspaper":
										document.location.href="http://www.canada.com/nanaimodailynews/search_results.html?searchtype=0&searchfor=" + escape(q);
										break;
									case "marketplace":
										document.location.href="http://shopping.nanaimodailynews.canada.com/shared/search.aspx?s=" + escape(q);
										break;
									case "canada":
										document.location.href="http://www.canada.com/findit/search/site/index.html?q=" + escape(q);
										break;
									case "fp":
										document.forms["searchform"].method="POST";
										document.forms["searchform"].action ="http://www.fpinfomart.ca/ar/ar_cc_landing.php";
										document.getElementById("t1").value = q;
										document.forms["searchform"].submit();
										break;
								}
							}
						</script>
         			</form>
