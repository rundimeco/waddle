                        adcookieTag = (typeof adcookieTag !== 'undefined') ? (adcookieTag) : ('');
                        dartad_tile = (typeof dartad_tile !== 'undefined') ? (dartad_tile + 1) : (1);

                        var dartad_url = "http://ad.ca.doubleclick.net/N3081/adj/ndn.com/nanaimodailynews/news/story;loc=theTop;loc=top;sz=468x60,728x90;dcopt=ist;kw=ron;kw=nanaimodailynews;kw=news;nk=print;pr=nanaimodailynews;ck=nanaimodailynews;sck=news;page=story;tile="+dartad_tile+";"+adcookieTag+surroundTag+"ord=94465829?"; // script ad code with adcookie, used for debug  
                        document.write('<script language="JavaScript1.1" src="http://ad.ca.doubleclick.net/N3081/adj/ndn.com/nanaimodailynews/news/story;loc=theTop;loc=top;sz=468x60,728x90;dcopt=ist;kw=ron;kw=nanaimodailynews;kw=news;nk=print;pr=nanaimodailynews;ck=nanaimodailynews;sck=news;page=story;tile='+dartad_tile+';'+adcookieTag+surroundTag+'ord=94465829?"><\/script>');                                              
