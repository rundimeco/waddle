 
<script type="text/javascript">
   var bannerAD=new Array();
   var bannerADlink=new Array();
   var bannerADtarget=new Array();
   var adNum=0;
   var delayTime = 5;

   bannerAD[0]="images/logo1.jpg";
   bannerADlink[0]="home.php";
   bannerADtarget[0]="_php";


   bannerAD[1]="images/logo2.jpg";
   bannerADlink[1]="home.php";
   bannerADtarget[1]="_blank";



   bannerAD[2]="images/logo3.gif";
   bannerADlink[2]="home.php";
   bannerADtarget[2]="_blank";


   
   var preloadedimages=new Array();
   for (i=1;i<bannerAD.length;i++){
      preloadedimages[i]=new Image();
      preloadedimages[i].src=bannerAD[i];
   }

function setTransition(){
   if (document.all){
      bannerADrotator.filters.revealTrans.Transition=12;
      bannerADrotator.filters.revealTrans.apply();
   }
}


function playTransition(){
   if (document.all)
      bannerADrotator.filters.revealTrans.play()
}

function nextAd(){
   if(adNum<bannerAD.length-1)adNum++ ;
      else adNum=0;
   setTransition();
   document.images.bannerADrotator.src=bannerAD[adNum];
   playTransition();
   theTimer=setTimeout("nextAd()", delayTime * 1000);
}

function jump2url(){
   jumpUrl=bannerADlink[adNum];
   jumpTarget=bannerADtarget[adNum];
   
   if (jumpUrl != ''){
      if (jumpTarget != '')window.open(jumpUrl,jumpTarget);
      else window.open(jumpUrl,"","width=740,height=110,toolbar=no,location=no,directories=no,status=no,scrollbars=no,resizable=no");
   }
}
function displayStatusMsg() { 
   status=bannerADlink[adNum];
   document.returnValue = true;
}

function init() 
{
   document.write('<img style="cursor:hand;FILTER:revealTrans(duration=1,transition=12)" src="' + bannerAD[0] + '" width="100%" vheight="110" name=bannerADrotator onclick="javascript:jump2url()">');
}

function chkfrm1(){
var con_str=document.postform;
if(con_str.message.value==""){
    alert("The message required");
	return false;
}

if(con_str.message.value.length<10){
	alert("The message can not be less than 10 words");
	return false;
}
}


