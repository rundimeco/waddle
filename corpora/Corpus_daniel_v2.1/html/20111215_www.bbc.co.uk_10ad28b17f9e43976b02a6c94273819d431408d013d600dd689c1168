    window.bbcdotcom={};
    bbcdotcom.createObject = function(namespace){
        var names   = namespace.split('.'),
            next    = '',
            i       = 0,
            len     = names.length;
        for(i; i < len; i++){
            if('' !== next) {
            	next = ("object" === typeof next[names[i]]) ? next[names[i]] : next[names[i]] = {};
            } else {
            	next = ("object" === typeof window[names[i]]) ? window[names[i]] : window[names[i]] = {};
        	}
        }
    }
/*]]>*/
</script>


