<!-- This should only be included on article pages. -->
<script type="text/javascript">
/* @function globe.investor.watchlistOverlay
*
* This is function should only be available on article pages.
* This will display the overlay used to add this symbol to the your watch list.
*
*/
var globeInvestorOverlaySetting = "login";
var globeInvestorErrorMsg = "";
var globeInvestorFundName = "";
var globeInvestorUserId = "";
var globeInvestorSecurity = "";
var globeInvestorSecurityType = "";
globe.investor.getInvestorUserId=function(uid){
var hdCookie = $.cookie("hd");
var stringIndex = 0;
var cookieUid = "";
if (uid==""){
if (hdCookie!=""){
stringIndex = hdCookie.indexOf("|",0);
cookieUid = hdCookie.substring(0,stringIndex);
if (cookieUid==""){
cookieUid="-1"
return cookieUid
}else{
return cookieUid
} }else{
cookieUid="-1"
return cookieUid
}
}else{
return uid;
}
}
globe.investor.watchlistOverlaySetting=function(type){
globeInvestorOverlaySetting = type;
return false;
}
globe.investor.popWatchlistSelect=function(json){
$("#copy-watchlist").find('option').remove().end();
$("#copy-watchlist").append("<option value=\"-\">Select Watchlist</option>");
$.each(json, function(i, val) {
if (this.watchlistId!="" || this.watchlistName!=""){
var wlName = this.watchlistName;
if (wlName.length > 35) wlName = wlName.substring(0, 35) + "...";
$("#copy-watchlist").append("<option value=\""+this.watchlistId+"\">"+wlName+"</option>");
}
});
if (globeInvestorSecurityType == 'funds') {
$("#watchlist-add-security-name").html(globeInvestorFundName);
} else {
$("#watchlist-add-security-name").html(globeInvestorSecurity);
}
}
globe.investor.successMessage=function(json){
//$.each(json, function(i, val) {
// console.log(json.message)
$("#copy-status").html("<div class=\"loading\"><img src=\"http://beta.images.theglobeandmail.com/images/globeinvestor/watchlist-loading-35x35.gif\" alt=\"loading\"/></div>");
$("#copy-status").html("<p class=\"responseMessage\">"+json.message+"</p>");
//});
}
globe.investor.initWatchlistOverlay=function(){
if (globeInvestorUserId==""){
globeInvestorUserId = globe.investor.getInvestorUserId(globeInvestorUserId);
}
if (globeInvestorUserId != "-1"){
if(globe.usrm.isLoggedIn()) {
$.ajax({
url: globe.conf.publicationUrl+'template/ver1-0/fragments/globeinvestor/get.watchlists.ajax.jsp',
type: 'GET',
dataType: 'json',
cache: false,
error: function(XMLHttpRequest, textStatus, errorThrown) {
globe.investor.watchlistOverlayError('Your request could not be completed at this time; please refresh the page and try again');
},
success: function(json) {
if (json.length ==1 && json[0].remessage!="-"){
if(json[0].returnCode=="0"){
if(json[0].remessage=="no watchlist found" ){
globe.investor.watchlistOverlaySetting("promo");
}
}else{
globe.investor.watchlistOverlaySetting("error");
globe.investor.watchlistOverlayError(json[0].remessage);
globeInvestorErrorMsg = json[0].remessage;
}
}else{
globe.investor.popWatchlistSelect(json);
globe.investor.watchlistOverlay(globeInvestorOverlaySetting);
}
}
});
}
}else{
globeInvestorOverlaySetting = "error";
globeInvestorErrorMsg = "System error: Error getting user id. <br/>Please try logging in again.";
globe.investor.watchlistOverlayError(globeInvestorErrorMsg);
}
return false;
}
globe.investor.addSecurityToWatchlist=function(){
if (globeInvestorUserId==""){
globeInvestorUserId = globe.investor.getInvestorUserId(globeInvestorUserId);
}
if (globeInvestorUserId != "-1"){
if(globe.usrm.isLoggedIn()) {
var watchlistid = "";
var watchlistNm = "";
var sym = "";
var ex = "";
var st = "";
var strSearch = "";
var strIndex = 0;
var postString = "";
var fundId = "";
watchlistid = $("#copy-watchlist").val();
watchlistNm = $("#copy-watchlist option[value='"+watchlistid+"']").text();
if (watchlistid != "-") {
if (globeInvestorSecurityType=="stocks"
|| globeInvestorSecurityType =="indices"
|| globeInvestorSecurityType == globe.investor.securityType.STOCK
|| globeInvestorSecurityType == globe.investor.securityType.ETF
|| globeInvestorSecurityType == globe.investor.securityType.INDEX
|| globeInvestorSecurityType == globe.investor.securityType.COMMODITY
|| globeInvestorSecurityType == globe.investor.securityType.CURRENCY){
strIndex = globeInvestorSecurity.indexOf("-");
sym = $.trim(globeInvestorSecurity.substring(0, strIndex));
ex = $.trim(globeInvestorSecurity.substring(strIndex+1));
//postString = "s="+sym+"&e="+ex+"&st="+globeInvestorSecurityType+"&wid="+watchlistid+"&uid="+globeInvestorUserId+"&wn="+watchlistNm
postString = "s="+sym+"&e="+ex+"&st="+globeInvestorSecurityType+"&wid="+watchlistid+"&wn="+watchlistNm
/* console.log(strIndex);
console.log(sym);
console.log(ex);
console.log(postString);*/
}else if (globeInvestorSecurityType.indexOf("1,") != -1){
fundId = $.trim(globeInvestorSecurityType.substring(globeInvestorSecurityType.indexOf(",")+1));
globeInvestorFundName = globeInvestorSecurity;
//postString = "fid="+fundId+"&fn="+globeInvestorFundName+"&wid="+watchlistid+"&uid="+globeInvestorUserId+"&wn="+watchlistNm;
postString = "fid="+fundId+"&fn="+globeInvestorFundName+"&wid="+watchlistid+"&wn="+watchlistNm;
/*console.log("fundId = "+fundId);
console.log("fn = "+globeInvestorFundName);*/
}else{
strIndex = globeInvestorSecurity.indexOf("-");
fundId = $.trim(globeInvestorSecurity.substring(0, strIndex));
//postString = "fid="+fundId+"&fn="+globeInvestorFundName+"&wid="+watchlistid+"&uid="+globeInvestorUserId+"&wn="+watchlistNm;
postString = "fid="+fundId+"&fn="+globeInvestorFundName+"&wid="+watchlistid+"&wn="+watchlistNm;
/*console.log("fundId = "+fundId);*/
}
$.ajax({
url: globe.conf.publicationUrl+'template/ver1-0/fragments/globeinvestor/add.watchlist.ajax.jsp',
type: 'POST',
dataType: 'json',
data: postString,
cache: false,
error: function(XMLHttpRequest, textStatus, errorThrown) {
/*console.log(XMLHttpRequest);
console.log(textStatus)*/
globe.investor.watchlistOverlayError('Your request could not be completed at this time; please refresh the page and try again');
},
success: function(json) {
if (json.returnCode=="0"){
globe.investor.successMessage(json);
setTimeout('globe.investor.watchlistOverlayHide()', 2500);
}else{
globe.investor.watchlistOverlaySetting("error");
globe.investor.watchlistOverlayError(json.remessage);
globeInvestorErrorMsg = json.remessage;
}
}
});
}else{
globeInvestorOverlaySetting = "error";
globeInvestorErrorMsg = "Please select a watchlist from the list above."; globe.investor.watchlistOverlayError(globeInvestorErrorMsg);
}
}
}else{
globeInvestorOverlaySetting = "error";
globeInvestorErrorMsg = "System error: Error getting user id. <br/>Please try login in again."; globe.investor.watchlistOverlayError(globeInvestorErrorMsg);
}
}
globe.investor.watchlistOverlayError=function(msg){
$("#copy-status").css({display:"block"});
$("#copy-status").html("<div class=\"loading\"><img src=\"http://beta.images.theglobeandmail.com/images/globeinvestor/watchlist-loading-35x35.gif\" alt=\"loading\"/></div>");
$("#copy-status").html("<p class=\"responseMessage\">"+msg+"</p>").fadeIn(600);
return false;
}
globe.investor.watchlistAddAttempt=function(){
$("#copy-status").css({display:"block"});
globe.investor.addSecurityToWatchlist();
return false;
}
globe.investor.watchlistOverlay=function(){
if (globeInvestorOverlaySetting=="error"){
globe.investor.watchlistOverlayError(globeInvestorErrorMsg);
$('body').prepend('<div id="loginOverlayUnderlay"></div>');
$("#copy-watchlist").attr("disabled", true);
$('.watchlist-overlay-add-stock').fadeIn(600);
$('.watchlist-overlay-add-stock').css(' z-index','999999 !important;');
$('.watchlist-overlay-add-stock a.cancel').bind('click', globe.investor.watchlistOverlayHide);
$('.watchlist-overlay-add-stock a.submit').attr("disabled", true);
}else{
if(globeInvestorOverlaySetting=="login"){
$("#copy-watchlist").attr("disabled", false);
$('.watchlist-overlay-add-stock a.submit').attr("disabled", false);
if ($("#copy-watchlist option[value='-']").text() != ""){
$('body').append('<div id="loginOverlayUnderlay"></div>');
$('.watchlist-overlay-add-stock').fadeIn(600);
$('.watchlist-overlay-add-stock').css(' z-index','999999 !important');
$('.watchlist-overlay-add-stock a.cancel').bind('click', globe.investor.watchlistOverlayHide);
$('.watchlist-overlay-add-stock a.submit').bind('click', globe.investor.watchlistAddAttempt);
}else{
globe.investor.initWatchlistOverlay();
setTimeout(globe.investor.watchlistOverlay,2500);
}
}else{
$("#userlogin-form-watchlist-promo").css({display:"block"}).fadeIn(600);
$("#userlogin").css({display:"none"});
$("#usertools").css({display:"none"});
$("#userlogin-form-watchlist-promo").css({borderTop:"none",marginTop:"0"});
globe.usrm.login.displayOverlay();
}
$('#loginOverlayUnderlay').click(function(){
globe.investor.watchlistOverlayHide();
});
}
return false;
}
globe.investor.watchlistOverlayHide=function(){
$('#loginOverlayUnderlay').remove();
$('.watchlist-overlay-add-stock').fadeOut(600);
$('.watchlist-overlay-add-stock a.cancel').unbind();
$('.watchlist-overlay-add-stock a.submit').unbind();
//$('#loginOverlayUnderlay').unbind();
$("#copy-status").css({display:"none"});
return false;
}
globe.investor.detectAction=function(security){
var articleId = "2302295";
if(!globe.usrm.isLoggedIn()) {
if($.browser.msie && $.browser.version == 6) {
window.location = globe.conf.publicationUrl+"globe-investor/my-watchlist";
} else {
window.location = globe.conf.publicationUrl+"login/?force=addtowatchlist&articleId=2302295";
}
}else{
if($.browser.msie && $.browser.version == 6) {
window.location = globe.conf.publicationUrl+"globe-investor/my-watchlist";
}else{
globeInvestorOverlaySetting = "login";
//globeInvestorOverlaySetting = "login";
globeInvestorSecurity = (security.indexOf(';') == -1) ? security : security.substring(0, security.indexOf(';'));
globeInvestorSecurityType = (security.indexOf(';') == -1) ? security : security.substring(security.indexOf(';')+1);
globe.investor.initWatchlistOverlay(); }
}
return false;
//$('.addtowatchlist').click(function() {
//console.log();
//var security = $(this).attr( 'rel' )
// $("#userlogin-form-watchlist-promo").css({display:"block"});
// globe.usrm.login.loginSuccessCallback = globe.investor.watchlistOverlay;
// globe.usrm.login.displayOverlay();
//}
//} else {
}
$(document).ready(function(){
// globe.investor.initWatchlistOverlay();
$("#close-overlay").click(function(){
globe.investor.watchlistOverlayHide();
return false;
});
$("li#watchlist a").click(function(event){
event.preventDefault();
var security = $(this).attr('rel');
globe.investor.detectAction(security);
return false;
});
$('.addtowatchlist').click(function(event) {
event.preventDefault();
var security = $(this).attr('rel');
globe.investor.detectAction(security);
return false;
});
if ($("h3.fundHeader").html()!=''){
globeInvestorFundName = $("h3.fundHeader").html(); }
});
