        function onFocus(field) {
            if (field.defaultValue == field.value) field.value = '';
        }
		function postComment(field) {
		var body = $('#body');
		var val = body.val();
		var def = body.attr ('defaultValue');
		if (val==def || val=='') {
			alert ("Please enter a comment");
			return false;
		}
		var btn = document.getElementById("postCommentBtn");
		btn.disabled=true;
		btn.textContent='Sending...';
		
		var myJSONObject = {"body": val, "action": "postcomment", "submitted": "true", "ajax": "true", "contentid": "ContentId(1.2049727)"};
		var postMessage = "<br /><b>Your comment has been posted.</b>";
		
		jQuery.post("http://www.scotsman.com/news/health/lives_of_pupils_with_asthma_put_at_risk_by_inhaler_rules_1_2049727", myJSONObject, function(result){

			var htmlResult = $(result).find ('#commentsSection');
			$('#commentsSection').html(htmlResult);
			$('#ajaxPost').html(postMessage);
			$('.loggedout').empty();
			$('#loggedinas').text( loginStatusResponse.loginStatus.screenname );
			$('.reportlink').show();

		});

		return false;
		
		}
    </script>
	
