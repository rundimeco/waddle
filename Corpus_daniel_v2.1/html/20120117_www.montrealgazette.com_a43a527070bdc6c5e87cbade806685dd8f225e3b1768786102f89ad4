		<script language="javascript">
			function doSearch() {
				var q = document.getElementById("q").value.replace(/[^0-9a-zA-Z\s*]/g,"");
				q = q.replace(/ /g,"+");
				if (q.length == 0) {
					alert("Please enter your search criteria");
					return;
				}
				var dname = document.domain; 
				if ( dname=="driving.ca") {
					document.location.href="http://www.driving.ca/montreal/search/search.html?q=" + escape(q);
					}
				else {
					document.location.href="http://www.montrealgazette.com/search/search.html?q=" + escape(q);
				}
			}
			//FAST WAVE 1
			//add javascript to hook up search text box in header
			//set up autocomplete on search box in header			
			jQuery(document).ready(function() {
				jQuery("#q").autocomplete("http://app.canada.com/search/search.svc/autocomplete", {
					dataType: 'jsonp',
					parse: function(data) {
						var rows = new Array();
						data = data.Terms;
						for(var i=0; i<data.length; i++){
							rows[i] = { data:{Term:data[i]}, value:data[i], result:data[i] };
						}
						return rows;
					},
					resultsClass: "fast_wave_results",
					formatItem: function(row, i, n) {
						return  row.Term;
					},
					cacheLength: 0,
					extraParams: {
						format: "json"
					},
					minChars: 1,
					max: 10,
					highlight: function(value, term) {
						var pos = value.toLowerCase().indexOf(term.toLowerCase());
						return (pos > 0)?"<b>" + value.substring(0,pos) + "</b>" + value.substring(pos, term.length) + "<b>" + value.substring(pos + term.length) + "</b>":value.substring(0, term.length) + "<b>" + value.substring(pos + term.length) + "</b>";
					},
					scroll: false,
					selectFirst: false
				}); 
			});
		</script>
							
<!--/monrealgazette/header_search_boxs.inc -->
						</div>
						<!-- Search  wrapper ends -->
					</div>
					<!-- searchcol ends -->
				</div>
				<!-- logosearchbar ends -->
			</div>
			<!-- headerwrapper ends -->
			<div class="clear">&nbsp;</div>
