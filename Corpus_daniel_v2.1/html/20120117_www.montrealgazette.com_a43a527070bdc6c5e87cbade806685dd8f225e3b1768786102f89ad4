<div id="loginstatusbarchild"></div>

<script>
	function handlePostLogin() {
		// change the login status bar to reflect a logged in state
		jQuery.getScript("http://"+window.location.hostname+"/scripts/sso/user.ashx?format=json&callback=renderLoginStatusBar");

		if((window.location+"").indexOf("/members/account-verified.html") > -1 || (window.location+"").indexOf("/members/cancel-deletion.html") > -1 || (window.location+"").indexOf("/members/reset-password-complete.html") > -1) window.location="/index.html";
		else window.location.reload();
	}

	function handlePostLogout() {
		// change the login status bar to reflect a logged out state
		jQuery.getScript("http://"+window.location.hostname+"/scripts/sso/user.ashx?format=json&callback=renderLoginStatusBar");
		
		if((window.location+"").indexOf("edit-profile.html") > -1) window.location="/index.html";
		else window.location.reload();
	}

	function dologout() {
		// create the hidden logout iframe
		var src = 'http://'+window.location.hostname+'/scripts/sso/logout.ashx?iframe=true';
		jQuery('<iframe id="iframe_logout" style="visibility:hidden;display:none" frameborder="0" hspace="0" scrolling="no" src="' + src + '"></iframe>').appendTo('body');
	}

	function renderLoginStatusBar(user) {
		var user = user.User;
		var statusBarHtml = "";

		if (user.IsLoggedIn) {
			statusBarHtml += "<ul>";
			statusBarHtml += "	<li>Hi " + user.DisplayName + "</li>";
			statusBarHtml += " " + profileLink;
			statusBarHtml += "	<li><a href=\"javascript:dologout();\">Sign Out</a></li>";
			statusBarHtml += "</ul>";
		}
		else {
			statusBarHtml += "<ul>";
			statusBarHtml += "	<li><a href=\"javascript:light.mask(jQuery('body'),light.getHtml('user_reg_internal_1t'));\">Log in</a></li>";
			statusBarHtml += "	<li><a href=\"javascript:light.mask(jQuery('body'),light.getHtml('user_reg_internal_1t'));\">Register</a></li>";
			statusBarHtml += "</ul>";
		}
		document.getElementById("loginstatusbarchild").innerHTML = statusBarHtml;
	}
</script>

<script>jQuery.getScript("http://"+window.location.hostname+"/scripts/sso/user.ashx?format=json&callback=renderLoginStatusBar");</script>

